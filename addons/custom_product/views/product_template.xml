<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tag_ids']" position="after">
                <field name="slug" string="Slug" placeholder="Autogenerated based on product name"/>
                <field name="additional_barcode" string="Additional Barcode" placeholder="Enter unique barcode"/>
            </xpath>
        </field>
    </record>
</odoo>
